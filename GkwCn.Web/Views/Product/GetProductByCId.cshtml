@model ProductListViewModel


@if (Model.ListValue.Count() > 0)
{
    <div class="span3">
        <h4 class="page-header">热门产品</h4>
        <ul class="thumbnails">
            @foreach (var item in Model.ListValue)
            {    
                <li class="span3">
                    <a href="~/product/details/@item.Id" class="thumbnail text-center">
                        <img alt="@item.Name" src="@item.PictureUrl">
                        <h5>@item.Name</h5>
                    </a>
                </li>
            }
        </ul>
    </div>
}