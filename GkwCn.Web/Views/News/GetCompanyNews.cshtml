@model NewsListViewModel

@{
    int index = 0;
}

<div class="span9">
    @if (Model.ListValue.Count() > 0)
    {
        <h4 class="page-header">企业新闻</h4>
        foreach (var item in Model.ListValue)
        {
            if (index % 3 == 0)
            { 
            @:<ul class="thumbnails news"> 
            }
<li class="span3">
        <div class="thumbnail">
            <a href="~/news/details/@item.Id" target="_blank"><img alt="@item.Title" src="@item.PictureUrl" /></a>
            <div class="caption">
                <a href="~/news/details/@item.Id" target="_blank"><h3>@item.Title</h3></a>
                <p>@item.Summary</p>
                @*<p><a class="btn btn-primary" target="_blank" href="~/news/details/@item.Id">浏览</a></p>*@
            </div>
        </div>
    </li>
            if (index % 3 == 2)
            {      
            @:</ul>    
            }
            index++;
        }
    }
</div>
