@model GkwCn.Domains.News.News
@{
    ViewBag.Title = "新闻 - " + Model.Title + " - " + Model.Keyword;
    ViewBag.Keywords = Model.Keyword;
    ViewBag.Description = Model.Summary;
}


<div class="span9">
    <h4 class="text-center"><span class="hide">@Html.DisplayFor(model => model.Keyword)</span>@Html.DisplayFor(model => model.Title)<span> - 中国工业控制网</span></h4>
    @if (!string.IsNullOrEmpty(Model.SubHead))
    {
        <blockquote class="offset1 text-right">
            <p>@Html.DisplayFor(model => model.SubHead)</p>
            <small>关键词 <cite title="@Html.DisplayFor(model => model.Title)">@Html.DisplayFor(model => model.Keyword)</cite></small>
        </blockquote>
    }
    <hr />
    <div class="offset1">@{Html.RenderAction("TagBarByKeywords", "Tag", new { keywords = Model.Keyword });}</div>
    <h5><span class="label label-info offset1">@Html.DisplayFor(model => model.NewsType)</span> <span class="label offset1">发表时间：@Html.DisplayFor(model => model.CreateTime)</span> <span class="label label-inverse offset1">作者：@Html.DisplayFor(model => model.Writer.LoginName)</span></h5>
    <div class="offset1">
        <p class="hide">@Html.Raw(Model.Summary)</p>
        <p>@Html.Raw(Model.Content)</p>
        <p class="hide">@Html.DisplayFor(model => model.Title)</p>
        <small>免责声明：本站部分内容均来自互联网，如不慎侵害了您的相关权益，请留言告知，我们将尽快删除！</small>
    </div>
    <div class="span9">
        <hr />
        <!-- UJian Button BEGIN -->
        <div class="ujian-hook"></div>
        <script type="text/javascript">var ujian_config = { num: 10, showType: 3, target: 1, defaultPic: 'http://www.gkwcn.com/content/images/logo-red.png', bgColor: '#' };</script>
        <script type="text/javascript" src="http://v1.ujian.cc/code/ujian.js?uid=1812570"></script>
        <a href="http://www.ujian.cc" style="border: 0;">
            <img src="http://img.ujian.cc/pixel.png" alt="友荐云推荐" style="border: 0; padding: 0; margin: 0;" />
        </a>
        <!-- UJian Button END -->
    </div>
</div>
@{Html.RenderAction("GetPartialList", "product", new { view = "GetProductByCId", size = 10 });}
<div class="span12">
    <!-- UY BEGIN -->
    <div id="uyan_frame"></div>
    <script type="text/javascript" src="http://v2.uyan.cc/code/uyan.js?uid=1812570"></script>
    <!-- UY END -->
</div>

